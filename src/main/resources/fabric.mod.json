{
  "schemaVersion": 1,
  "id": "ctm",
  "version": "${version}",

  "name": "ConnectedTexturesMod for Fabric",
  "description": "An unofficial Fabric port of the original ConnectedTexturesMod. Adds extensions to the vanilla model and texture system to allow resource packs to create complex models.",
  "authors": [
    "Team Chisel",
    "Pepper_Bell"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/ctm-fabric",
    "issues": "https://github.com/PepperCode1/ConnectedTexturesMod-Fabric/issues",
    "sources": "https://github.com/PepperCode1/ConnectedTexturesMod-Fabric"
  },

  "license": "GPL-2.0-only",
  "icon": "assets/ctm/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "team.chisel.ctm.client.CTMClient"
    ],
    "modmenu": [
      "team.chisel.ctm.client.config.ModMenuApiImpl"
    ]
  },
  "mixins": [
    "ctm.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.6",
    "fabric": ">=0.43.1+1.18",
    "minecraft": "1.18.x"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/7rnTYXu"
      }
    }
  }
}
